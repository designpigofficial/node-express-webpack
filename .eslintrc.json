{
  "extends": ["node"],
  "rules": {
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "no-duplicate-imports": "error",
    "no-delete-var": "error",
    "no-else-return": ["error", { "allowElseIf": false }],
    "curly": "error",
    "import/prefer-default-export": "off",
    "import/no-commonjs": "off",
    "no-invalid-this": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  },
  "env": {
    "jest/globals": true
  },
  "plugins": ["jest"]
}
